
{
  "rewrites": [
    {
      "source": "/popup-script.js",
      "destination": "/popup-script.js"
    },
    {
      "source": "/((?!popup-script\\.js$).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "ALLOWALL"
        },
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self' https://*.myshopify.com https://admin.shopify.com"
        }
      ]
    }
  ]
}
